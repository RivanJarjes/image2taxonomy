<div id="product-analysis" class="space-y-4">
  <!-- Title -->
  <h1 class="text-2xl font-bold mb-6"><%= product.title || "Generating Title..." %></h1>

  <!-- Status Badge -->
  <div class="flex items-center gap-2 bg-blue-50 p-3 rounded-lg border border-blue-200">
    <div class="relative w-3 h-3">
      <div class="absolute inset-0 bg-blue-500 rounded-full animate-pulse"></div>
    </div>
    <span class="text-sm font-semibold text-blue-900">Analysis in Progress</span>
  </div>

  <!-- Loading Skeleton -->
  <div class="space-y-4 bg-gray-50 p-4 rounded-lg border border-gray-200">
    <div>
      <p class="text-xs font-mono text-gray-500 mb-2">Taxonomy:</p>
      <div class="animate-pulse">
        <div class="h-6 bg-gray-200 rounded w-3/4"></div>
      </div>
    </div>

    <div class="border-t pt-4">
      <p class="text-xs font-mono text-gray-500 mb-2">Description:</p>
      <div class="animate-pulse space-y-2">
        <div class="h-4 bg-gray-200 rounded"></div>
        <div class="h-4 bg-gray-200 rounded w-5/6"></div>
        <div class="h-4 bg-gray-200 rounded w-4/6"></div>
      </div>
    </div>
  </div>

  <p class="text-center text-sm text-gray-500">This may take a minute...</p>
</div>

