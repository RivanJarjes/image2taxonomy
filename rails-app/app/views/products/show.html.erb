<div class="container mx-auto p-4">
  <div class="flex gap-4">
    <div class="w-1/2">
      <%= image_tag @product.image, class: "rounded-lg shadow-lg" %>
    </div>

    <div class="w-1/2" 
         id="product_metadata"
         data-controller="poll" 
         data-poll-url-value="<%= product_path(@product) %>">
         
      <%= render "product_details", product: @product %>
      
    </div>
  </div>
</div>
